actor: Tester
paths:
    tests: codeception
    log: codeception/_output
    data: codeception/_data
    helpers: codeception/_support
settings:
    bootstrap: _bootstrap.php
    colors: true
    memory_limit: 1024M
modules:
    config:
        Db:
            dsn: 'mysql:host=<%= ENV['DB_HOST'] %>;dbname=<%= ENV['DB_NAME'] %>'
            user: '<%= ENV['DB_USER'] %>'
            password: '<%= ENV['DB_PASS'] %>'
            dump: codeception/_data/dump.sql
